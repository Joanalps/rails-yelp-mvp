<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<p>
<%= link_to "Edit a restaurant", edit_restaurant_path, class:"btn btn-primary"%>
</p>
<p>
<%= link_to "Back to restaurant", restaurants_path, class:"btn btn-success"%>
</p>

<p>
<%= link_to "Delete",
  restaurant_path(@restaurant),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
  class:"btn btn-danger"
%>
</p>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class:"btn btn-primary"%>

<p><strong>Reviews</strong></p>
<ul class=“list-group”>
  <% @restaurant.reviews.each do |review| %>
    <li class=“list-group-item”><%= review.content%>, <%=review.rating %></li>
  <% end %>
</ul>
